<section class="lrv-u-border-t-1 lrv-u-padding-t-050 lrv-u-border-color-brand-secondary lrv-u-margin-t-2 lrv-u-display-block lrv-u-padding-t-1">
	<div class="">
		<header class="lrv-u-margin-b-050">
			<h3 class="lrv-u-text-transform-uppercase lrv-u-color-grey lrv-u-font-size-20">{{title}}</h3>
		</header>
		<div class="">
			{% if data.posters != [] %}
				<h4 class="lrv-u-font-style-italic lrv-u-margin-b-1">Peer-Reviewed Conference and Journal</h4>
			{% endif %}
			<ol class="lrv-a-unstyle-list">
				{% for item in data.peerReviewed %}
					<li>
						<p class="lrv-u-margin-t-00 lrv-u-font-size-16">{{item.cite|raw}} <br/><em>{{item.status}}</em></p>
					</li>
				{% endfor %}
			</ol>
			{% if data.posters != [] %}
				<h4 class="lrv-u-font-style-italic lrv-u-margin-b-1">Short Papers and Posters</h4>
				<ol class="lrv-a-unstyle-list">
					{% for item in data.posters %}
						<li>
							<p class="lrv-u-margin-t-00 lrv-u-font-size-16">{{item.cite|raw}}</p>
						</li>
					{% endfor %}
				</ol>
			{% endif %}
		</div>
	</div>
</section>