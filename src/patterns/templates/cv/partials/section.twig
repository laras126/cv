<section class="lrv-u-border-t-1 lrv-u-padding-t-050 lrv-u-border-color-brand-secondary lrv-u-margin-t-2 lrv-u-display-block">
	<div class="lrv-a-grid a-cols-content">
		<header class="a-cols-content-header">
			<h3 class="lrv-u-text-transform-uppercase lrv-u-color-grey lrv-u-font-size-16">{{title}}</h3>
		</header>
		
		{% if simple %}
			<ul class="lrv-a-unstyle-list lrv-a-space-children-vertical lrv-a-space-children--1">
			{% for item in data %}
				<li class="lrv-u-margin-tb-00 {{ simple_spaced ? 'lrv-u-display-inline' : 'lrv-u-margin-b-050'}}">{{item|raw}}{{ loop.index != data|length ? separator ~ ' ' }}</li>
			{% endfor %}
			</ul>
		{% else %}
			<ul class="lrv-a-unstyle-list {{ unspaced ? '' : 'lrv-a-space-children--1 lrv-a-space-children-vertical' }} lrv-u-width-100p lrv-u-margin-r-1">
				{% for item in data %}
					<li>
						<div class="lrv-u-flex lrv-a-space-children-horizontal lrv-a-space-children--1 lrv-u-margin-b-050">
							<h4><span class="lrv-u-font-size-16">{{item.position}}</span> <span class="lrv-u-text-transform-uppercase lrv-u-color-grey-dark lrv-u-font-size-14 lrv-u-font-weight-normal">{{item.company ? ' â€“ ' ~ item.company : ''}}</span></h4>
							<span class="lrv-u-margin-l-auto lrv-u-margin-t-025 lrv-u-text-transform-uppercase lrv-u-color-grey-dark lrv-u-font-size-14">{{item.startDate}} {{item.endDate ? ' - ' ~ item.endDate : '' }}</span>
						</div>
						
						{% if item.summary %}
							<p class="lrv-u-margin-tb-00">{{item.summary|raw}}</p>
						{% endif %}
						
						{% if item.highlights %}
							<ul class="a-toggle-content">
								{% for highlight in item.highlights %}
									<li>{{highlight|raw}}</li>
								{% endfor %}
							</ul>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
		{% endif %}

	</div>
</section>