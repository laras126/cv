<section class="lrv-u-border-t-1 lrv-u-padding-t-050 lrv-u-border-color-brand-secondary lrv-u-margin-t-2 lrv-u-display-block">
	<div class="lrv-a-grid a-cols-content">
		<header class="a-cols-content-header">
			<h3 class="lrv-u-text-transform-uppercase lrv-u-color-grey lrv-u-font-size-18">{{title}}</h3>
		</header>
		
		{% if simple %}
			<div class="lrv-a-unstyle-list lrv-a-space-children-vertical lrv-a-space-children--1">
				{% for item in data %}
					{{item|raw}}{{ loop.index != data|length ? ', '}}
				{% endfor %}
			</div>
		{% else %}
			<ul class="lrv-a-unstyle-list lrv-a-space-children-vertical lrv-a-space-children--1">
				{% for item in data %}
					<li>
						<div class="lrv-u-flex@desktop lrv-a-space-children-horizontal lrv-a-space-children--1 lrv-u-margin-b-050">
							<h4><span class="lrv-u-font-size-18">{{item.position}}</span> <span class="lrv-u-text-transform-uppercase lrv-u-color-grey-dark lrv-u-font-size-14 lrv-u-font-weight-normal">{{item.company ? ' â€“ ' ~ item.company}}</span></h4>
							<span class="lrv-u-margin-l-auto lrv-u-text-transform-uppercase lrv-u-color-grey-dark lrv-u-font-size-14">{{item.startDate}} - {{item.endDate}}</span>
						</div>
						
						<p class="lrv-u-margin-tb-00">{{item.summary|raw}}</p>
						
						{% if item.highlights %}
							{% set hash = random(1000) %}
							<input class="a-toggle lrv-u-color-white lrv-u-font-weight-bold lrv-u-padding-a-050 lrv-u-border-radius-5 lrv-u-background-color-brand-secondary" id="toggle-{{hash}}" type="checkbox" />
							<label for="toggle-{{hash}}" class="lrv-u-color-white lrv-u-font-weight-bold lrv-u-padding-a-050 lrv-u-border-radius-5 lrv-u-background-color-brand-secondary lrv-u-text-transform-uppercase lrv-u-font-size-12 lrv-u-cursor-pointer lrv-u-display-inline-block lrv-u-margin-tb-050">Show Details</label>
							<ul class="a-toggle-content">
								{% for highlight in item.highlights %}
									<li>{{highlight|raw}}</li>
								{% endfor %}
							</ul>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
		{% endif %}

	</div>
</section>